<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.gmu.crm.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.gmu.crm.web.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.gmu.crm.settings.web.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/settings/user/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ActiveController</servlet-name>
        <servlet-class>com.gmu.crm.workbench.web.controller.ActiveController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActiveController</servlet-name>
        <url-pattern>/workbench/active/create.do</url-pattern>
        <url-pattern>/workbench/active/save.do</url-pattern>
        <url-pattern>/workbench/active/select.do</url-pattern>
        <url-pattern>/workbench/active/delete.do</url-pattern>
        <url-pattern>/workbench/active/selectInfo.do</url-pattern>
        <url-pattern>/workbench/active/update.do</url-pattern>
        <url-pattern>/workbench/active/detail.do</url-pattern>
        <url-pattern>/workbench/active/getRemarkInfo.do</url-pattern>
        <url-pattern>/workbench/active/deleteRemark.do</url-pattern>
        <url-pattern>/workbench/active/saveRemark.do</url-pattern>
        <url-pattern>/workbench/active/updateRemark.do</url-pattern>
    </servlet-mapping>
</web-app>
